@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["title"] = "Roles List";
}
<a asp-action="Create" asp-controller="Role">Add Role</a>
<h4>List-Roles</h4>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Role Id</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary btn-sm" asp-controller="Role" asp-route-Id="@item.Id">Edit</a>
                    <a asp-action="Delete" class="btn btn-danger btn-sm" id="confirmDeletion" asp-controller="Role" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>